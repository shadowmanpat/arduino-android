<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
            <TableRow
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnForwardLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="-1"
                    android:src="@drawable/ic_arrow_up_right_black" />
                <ImageButton
                    android:id="@+id/btnForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_up_black" />
                <ImageButton
                    android:id="@+id/btnForwardRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_up_right_black" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnRotateLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:src="@drawable/ic_rotate_right_black" />
                <ImageButton
                    android:id="@+id/btnStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stop_black" />
                <ImageButton
                    android:id="@+id/btnRotateRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rotate_right_black" />
            </TableRow>

            <TableRow
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnBackwardLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:scaleY="-1"
                    android:src="@drawable/ic_arrow_up_right_black" />
                <ImageButton
                    android:id="@+id/btnBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="-1"
                    android:src="@drawable/ic_arrow_up_black" />
                <ImageButton
                    android:id="@+id/btnBackwardRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="-1"
                    android:src="@drawable/ic_arrow_up_right_black" />
            </TableRow>

            <TableRow
                android:layout_marginTop="20sp">
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:textAlignment="center"
                    android:text="Distance"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:text="get distance" />
            </TableRow>

            <TableRow
                android:layout_marginTop="20sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:textAlignment="center"
                    android:text="Sonar Servo"/>
            </TableRow>

            <TableRow>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_span="3"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/radioBtnServoLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left" />
                    <RadioButton
                        android:id="@+id/radioBtnServoMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mid" />
                    <RadioButton
                        android:id="@+id/radioBtnServoRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Right" />
                </RadioGroup>
            </TableRow>

            <TableRow
                android:layout_marginTop="20sp">
                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:textAlignment="center"
                    android:text="Speed: 1"/>
            </TableRow>

            <TableRow>
                <SeekBar
                    android:id="@+id/seekBarSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:min="1"
                    android:max="10"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvArduino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>